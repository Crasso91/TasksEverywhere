<Window x:Class="ICeQuartScheduler.Manager.Windows.Preferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICeQuartScheduler.Manager.Windows"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:uc="clr-namespace:ICeQuartScheduler.Manager.UserControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Preferences" Height="450" Width="800"
        Icon="..\IceQuartzIcon.ico">
    <Grid>
        <uc:FileSelector x:Name="QuartzFileSelector" Margin="124,0,0,374" SelectorType="File"></uc:FileSelector>
        <uc:FileSelector x:Name="WhereFileSelector" Margin="124,50,0,324" SelectorType="Folder"></uc:FileSelector>
        <Button Content="Salva" Name="btnSalva" HorizontalAlignment="Left" Margin="697,362,0,0" VerticalAlignment="Top" Width="75" Click="BtnSalva_Click" />
        <Label Content="Quartz config path" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Where config path" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
