<UserControl x:Class="ICeQuartScheduler.Manager.UserControls.FileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICeQuartScheduler.Manager.UserControls"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Name="txtFilePath" Height="26" Margin="10,10,51,0" TextWrapping="Wrap" Text="{Binding Label}" VerticalAlignment="Top"/>
        <fa:ImageAwesome Icon="FolderOpen" Foreground="#FF03A9F4" Grid.Column="0" Name="btnSfoglia" MouseUp="BtnSfoglia_MouseUp" Height="16" VerticalAlignment="Top" HorizontalAlignment="Right" Width="23" Margin="0,20,10,0" ></fa:ImageAwesome>
    </Grid>
</UserControl>
